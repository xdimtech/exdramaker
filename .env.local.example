# Local Environment Configuration Example
# Copy this file to .env.local and fill in your values
# IMPORTANT: .env.local is gitignored - never commit secrets to git

# PostHog Analytics Configuration
# ================================
# To enable PostHog analytics:
# 1. Sign up at https://app.posthog.com (free tier available)
# 2. Create two projects: one for development, one for production
# 3. Copy the API key from Project Settings > Project API Key
# 4. Add the keys below (format: phc_xxxxxxxxxxxxxxxxxxxxx)

# Development PostHog Configuration
VITE_APP_POSTHOG_ENABLED=false
VITE_APP_POSTHOG_KEY=
VITE_APP_POSTHOG_HOST=https://app.posthog.com
VITE_APP_POSTHOG_DEBUG=true

# Enable/Disable All Analytics (master switch)
VITE_APP_ENABLE_TRACKING=true

# Supabase Configuration (if using auth features)
# ================================================
# Get these from your Supabase project dashboard
VITE_APP_SUPABASE_URL=
VITE_APP_SUPABASE_ANON_KEY=

# Other Configuration
# ===================
# Disable prevent unload dialog in development
VITE_APP_DISABLE_PREVENT_UNLOAD=true
